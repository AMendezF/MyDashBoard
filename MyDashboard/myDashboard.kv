#:kivy 1.10.0
#:import Factory kivy.factory.Factory

<MyDashboardScreen>:
            
    GridLayout:
        cols: 2
        height: root.height if root.fullscreen else max(root.height, content.height)
        spacing: '8dp'

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: .20
            spacing: '8dp'
            
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: .20

                Label:
                    id: status
                    text: '[b]ACTIVE[/b]'
                    markup: True
                    font_size: '30sp'
                    color: root.statusColor
                    halign: 'center'
                    valign: 'center'
                
                    canvas.before:
                        Color:
                            rgb: .3, .3, .3
                        Rectangle:
                            size: self.size
                            pos: self.pos
                            source: 'data/background.png'
                Button:
                    text: '[b]Overview[/b]'
                    markup: True
                    font_size: '28sp'
                    
            GridLayout:
                id: index
                cols: 1
                row_force_default: True
                row_default_height: 40

                canvas.before:
                    Color:
                        rgb: .3, .3, .3
                    Rectangle:
                        size: self.size
                        pos: self.pos
                        source: 'data/background.png'
                Button:
                    text: 'WaterFlow'
                Button:
                    text: 'Temperature'

        StackLayout:
            id: content

            canvas.before:
                Color:
                    rgb: .6, .6, .6
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: 'data/background.png'
        
